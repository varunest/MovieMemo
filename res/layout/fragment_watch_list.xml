<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tabs"
    android:tileMode="repeat"
    tools:context="com.varunest.moviememo.MainActivity$PlaceholderFragment" >

    <GridView
        android:id="@+id/watch_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:listSelector="@drawable/grid_selector"
        android:numColumns="auto_fit"
        android:padding="10dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <ListView
        android:id="@+id/watch_list_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/red_light"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:overScrollFooter="@color/red_light"
        android:overScrollHeader="@color/red_light" />

    <ImageView
        android1:id="@+id/empty_image"
        android1:layout_width="200dp"
        android1:layout_height="200dp"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android1:background="@null"
        android1:src="@drawable/empty" />

</RelativeLayout>