<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tabs"
    android:tileMode="repeat"
    tools:context="com.varunest.moviememo.MainActivity$PlaceholderFragment" >

    <ListView
        android:id="@+id/search_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/red_light"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:overScrollFooter="@color/red_light"
        android:overScrollHeader="@color/red_light" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/search_list"
        android:background="@color/red_light" />

</RelativeLayout>