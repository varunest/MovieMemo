<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tabs"
    android:tileMode="repeat"
    tools:context="com.varunest.moviememo.MainActivity$PlaceholderFragment" >

    <ImageButton
        android1:id="@+id/searchButton"
        android1:layout_width="200dp"
        android1:layout_height="200dp"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android:scaleType="fitXY"
        android1:background="@null"
        android1:onClick="onSearch"
        android1:src="@drawable/image_button_selector" />

    <ImageButton
        android1:id="@+id/noSearchButton"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android1:background="@null"
        android1:onClick="onSearch"
        android1:src="@drawable/no_results_selector"
        android1:visibility="gone" />

    <ImageButton
        android1:id="@+id/tryAgain"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android1:background="@null"
        android1:onClick="onSearch"
        android1:src="@drawable/try_again_selector"
        android1:visibility="gone" />

</RelativeLayout>