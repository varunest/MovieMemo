<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/tabs</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabBarStyle">@style/customTabBar</item>
        <item name="@android:attr/actionBarTabTextStyle">@style/TabStyle</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:background">@color/actionbar_color</item>
    </style>
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
    <item name="android:src">@drawable/ic_action_overflow</item>
</style>

    <!-- Modify the text color -->
    <style name="TabStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/tabs</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">

        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="android:showDividers">none</item>
    </style>

    <style name="customTabBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">#000</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:background">@color/tab_bar</item>
    </style>

    <style name="movieRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="progressdialog" parent="@style/@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name = "android:windowBackground">@color/transparent</item>
        <item name="android:textSize">20sp</item>     </style>
  
</resources>